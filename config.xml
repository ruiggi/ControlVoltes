<?xml version='1.0' encoding='utf-8'?>
<widget id="com.controlvoltes.app" version="1.3.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>VOLTES</name>
    <description>
        Cronómetro deportivo para control de vueltas con botones físicos de volumen
    </description>
    <author email="dev@controlvoltes.com" href="https://controlvoltes.com">
        Control Voltes Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="AndroidXEnabled" value="true" />
        <preference name="android-minSdkVersion" value="24" />
        <preference name="android-targetSdkVersion" value="35" />
        <icon density="ldpi" src="www/icons/crono-512.png" />
        <icon density="mdpi" src="www/icons/crono-512.png" />
        <icon density="hdpi" src="www/icons/crono-512.png" />
        <icon density="xhdpi" src="www/icons/crono-512.png" />
        <icon density="xxhdpi" src="www/icons/crono-512.png" />
        <icon density="xxxhdpi" src="www/icons/crono-512.png" />
    </platform>
    
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Fullscreen" value="false" />
    <preference name="KeepRunning" value="true" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#333333" />
    <preference name="Orientation" value="portrait" />
    
    <!-- Desactivar SplashScreen completamente -->
    <preference name="SplashScreen" value="none" />
    <preference name="SplashScreenDelay" value="0" />
    <preference name="ShowSplashScreen" value="false" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenBackgroundColor" value="#333333" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="FadeSplashScreenDuration" value="0" />
</widget>

